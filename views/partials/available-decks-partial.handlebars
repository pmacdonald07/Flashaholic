<div class="card col-12 col-sm-6 col-md-4 img-fluid p-0 mb-2">
        <img src="/assets/imgs/project-2-bg.png" class="card-img-top" alt="back-and-orange-swirl" style="width:100%">
      <div class="card-img-overlay d-flex align-items-center">
        <div class="mx-auto">
            <h3 class="text-light text-center">{{this.title}}</h3>
            <p class="card-text text-light">{{user.username}}  |  
                {{allDecks.length}} {{format_plural "card" allDecks.length}}  |  
                <a href="/decks/{{id}}" class="">view deck</a>  |
                {{#if this.isOwner}}
                {{else}}
                    <button data-deck-id={{this.id}} class="btn btn-link p-0 favBtn">save deck</button>
                {{/if}}</p>
        </div>
      </div>
</div>