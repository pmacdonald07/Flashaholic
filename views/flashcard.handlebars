<h2 class="mt-3 text-center" id="deckTitle">{{deckTitle}}</h2>

<div>
  <div class="d-none" id="deckID">{{id}}</div>
  <div class="d-none" id="authBool">{{loggedIn}}</div>
  <div class="d-none" id="flashcardArr">{{flashcards}}</div>
  <div class="deck-card">
    <div class="content">
      <div class="front">
        <div class="h-100" id="cardFront">
            {{!-- Card Front Text --}}
        </div>
      </div>
      <div class="back">
        <div id="cardBack">
        {{!-- Card Back Text --}}
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex" id="buttons">
    <button class="btn btn-secondary" id="prevBtn">Previous</button>
    <button class="btn btn-secondary" id="nextBtn">Next</button>
  </div>
</div>

<script type="application/javascript" src="/javascript/loadCard.js"></script>
